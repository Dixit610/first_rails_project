<h1>Listing All Product</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
    </tr>
    <% @product_details.each do |product_detail|%>
    <tr>
        <td><%=product_detail.name%></td>
        <td><%=product_detail.category%></td>
        <td><%=product_detail.price%></td>
        <td><%=link_to 'Show',product_detail_path(product_detail)%></td>
        <td><%=link_to 'Edit',edit_product_detail_path(product_detail)%></td>
        <td><%= link_to 'Delete', product_detail_path(product_detail),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    
    <%end%>
</table>
<p><%=link_to 'New Product',new_product_detail_path%></p>
